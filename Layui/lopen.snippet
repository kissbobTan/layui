    //<form class="layui-form" action="">
    //    <div class="layui-form-item">
    //        <label class="layui-form-label">名称</label>
    //        <div class="layui-input-block">
    //            <input type="text" id="#" name="#" lay-verify="title" autocomplete="off" placeholder="请输入名" class="layui-input">
    //        </div>
    //    </div>
    //    <input type="hidden" id="hidMenuID" value="0" />
    //</form>
	//</div>
	$end$
    ]]>
			</Code>
		</Snippet>
	</CodeSnippet>
	
	
</CodeSnippets>
